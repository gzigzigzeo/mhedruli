{
  "manifest_version": 2,

  "name": "მხედრული",
  "short_name": "mhedruli",
  "description": "Это расширение помогает выучить грузинский алфавит (მხედრული)",
  "version": "1.1",

  "background": {
    "scripts": ["background.js"], "persistent": false
  },

  "browser_action": { "default_title": "Грузинифицировать" },
  "icons": { "128": "icon.png"},
  "permissions": ["activeTab", "storage"],
  "options_page": "options.html"
}
